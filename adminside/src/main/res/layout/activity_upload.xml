<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".uploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/uploadownername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_boarder"
            android:gravity="start|center_vertical"
            android:hint="Enter Owner Name"
            android:padding="16dp"
            android:textColor="@color/green" />

        <EditText
            android:id="@+id/uploadvechiclebrand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_boarder"
            android:gravity="start|center_vertical"
            android:hint="Enter Vechicle Brand"
            android:padding="16dp"
            android:textColor="@color/green" />

        <EditText
            android:id="@+id/uploadvechiclerto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_boarder"
            android:gravity="start|center_vertical"
            android:hint="Enter Vechicle RTO"
            android:padding="16dp"
            android:textColor="@color/green" />

        <EditText
            android:id="@+id/uploadvechiclenumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_boarder"
            android:gravity="start|center_vertical"
            android:hint="Enter Vechicle Number"
            android:padding="16dp"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/green"
            android:text="Save"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

    </LinearLayout>
</ScrollView>